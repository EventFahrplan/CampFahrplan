<?xml version="1.0" encoding="utf-8"?>
<nerd.tuxmobil.fahrplan.congress.commons.CheckableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/lecture_list_item_title_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/ScheduleListPrimary"
        app:layout_constraintBottom_toTopOf="@+id/lecture_list_item_subtitle_view"
        app:layout_constraintEnd_toStartOf="@+id/lecture_list_item_video_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/placeholder_event_title" />

    <ImageView
        android:id="@+id/lecture_list_item_no_video_view"
        android:layout_width="wrap_content"
        android:layout_height="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:adjustViewBounds="true"
        android:baseline="13sp"
        android:contentDescription="@string/lecture_list_item_no_video_content_description"
        android:src="@drawable/ic_change_novideo"
        app:layout_constraintBottom_toTopOf="@+id/lecture_list_item_subtitle_view"
        app:layout_constraintDimensionRatio="w,75:48"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lecture_list_item_title_view"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/lecture_list_item_video_view"
        android:layout_width="wrap_content"
        android:layout_height="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:adjustViewBounds="true"
        android:baseline="13sp"
        android:contentDescription="@string/lecture_list_item_video_content_description"
        android:src="@drawable/ic_change_video"
        app:layout_constraintBottom_toTopOf="@+id/lecture_list_item_subtitle_view"
        app:layout_constraintDimensionRatio="w,75:48"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lecture_list_item_title_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lecture_list_item_subtitle_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/ScheduleListSecondary"
        app:layout_constraintBottom_toTopOf="@+id/lecture_list_item_whitespace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecture_list_item_title_view"
        tools:text="@string/placeholder_event_subtitle" />

    <Space
        android:id="@+id/lecture_list_item_whitespace"
        android:layout_width="0dp"
        android:layout_height="4dp"
        app:layout_constraintBottom_toTopOf="@+id/lecture_list_item_speakers_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecture_list_item_subtitle_view" />

    <TextView
        android:id="@+id/lecture_list_item_speakers_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/ScheduleListSecondary"
        app:layout_constraintBottom_toTopOf="@+id/lecture_list_item_footer_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecture_list_item_whitespace"
        tools:text="@string/placeholder_event_speakers" />

    <android.support.constraint.Group
        android:id="@+id/lecture_list_item_footer_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecture_list_item_speakers_view" />

    <TextView
        android:id="@+id/lecture_list_item_day_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp"
        android:textAppearance="@style/ScheduleListSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/lecture_list_item_footer_group"
        app:layout_constraintEnd_toStartOf="@+id/lecture_list_item_time_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lecture_list_item_footer_group"
        tools:text="@string/placeholder_event_day" />

    <TextView
        android:id="@+id/lecture_list_item_time_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp"
        android:textAppearance="@style/ScheduleListSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/lecture_list_item_footer_group"
        app:layout_constraintEnd_toStartOf="@+id/lecture_list_item_duration_view"
        app:layout_constraintStart_toEndOf="@+id/lecture_list_item_day_view"
        app:layout_constraintTop_toTopOf="@+id/lecture_list_item_footer_group"
        tools:text="@string/placeholder_event_start_time" />

    <TextView
        android:id="@+id/lecture_list_item_duration_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp"
        android:gravity="end"
        android:minWidth="55dp"
        android:textAppearance="@style/ScheduleListSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/lecture_list_item_footer_group"
        app:layout_constraintEnd_toStartOf="@+id/lecture_list_item_room_view"
        app:layout_constraintStart_toEndOf="@+id/lecture_list_item_time_view"
        app:layout_constraintTop_toTopOf="@+id/lecture_list_item_footer_group"
        tools:text="@string/placeholder_event_duration" />

    <TextView
        android:id="@+id/lecture_list_item_room_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/ScheduleListSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/lecture_list_item_footer_group"
        app:layout_constraintEnd_toStartOf="@+id/lecture_list_item_language_view"
        app:layout_constraintStart_toEndOf="@+id/lecture_list_item_duration_view"
        app:layout_constraintTop_toTopOf="@+id/lecture_list_item_footer_group"
        tools:text="@string/placeholder_event_room" />

    <TextView
        android:id="@+id/lecture_list_item_language_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:textAppearance="@style/ScheduleListSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/lecture_list_item_footer_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lecture_list_item_room_view"
        app:layout_constraintTop_toTopOf="@+id/lecture_list_item_footer_group"
        tools:text="@string/placeholder_event_language" />

</nerd.tuxmobil.fahrplan.congress.commons.CheckableLayout>
